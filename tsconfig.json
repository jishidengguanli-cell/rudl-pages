{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "WebWorker"],
    "module": "esnext",
    "moduleResolution": "Bundler",
    "types": ["@cloudflare/workers-types"],
    "strict": false,
    "noEmit": true,
    "checkJs": false
  },
  "include": ["functions/**/*.ts", "functions/**/*.tsx", "**/*.d.ts"],
  "exclude": ["node_modules", "public", "**/*.js"]   // ← 關鍵：排除同名 .js
}
